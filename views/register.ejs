<!-- views/register.ejs -->
<%- include('partials/header') %>

    <!-- Display success message -->
    <% if (success_msg) { %>
        <div class="alert alert-success">
            <%= success_msg %>
        </div>
        <% } %>

            <!-- Display error messages -->
            <% if (error_msg) { %>
                <div class="alert alert-danger">
                    <%= error_msg %>
                </div>
                <% } %>

                    <!-- Display validation errors -->
                    <% if (typeof errors !=='undefined' && errors.length> 0) { %>
                        <div class="alert alert-danger">
                            <% errors.forEach((error)=> { %>
                                <p>
                                    <%= error.msg %>
                                </p>
                                <% }); %>
                        </div>
                        <% } %>

                            <div class="container">
                                <h1 class="mt-5">Register</h1>
                                <form action="/auth/register" method="POST" class="mt-3">
                                    <!-- Name -->
                                    <div class="form-group">
                                        <label for="name">Name</label>
                                        <input type="text" name="name" class="form-control"
                                            value="<%= typeof name !== 'undefined' ? name : '' %>" required />
                                    </div>
                                    <!-- Email -->
                                    <div class="form-group">
                                        <label for="email">Email</label>
                                        <input type="email" name="email" class="form-control"
                                            value="<%= typeof email !== 'undefined' ? email : '' %>" required />
                                    </div>
                                    <!-- Password -->
                                    <div class="form-group">
                                        <label for="password">Password</label>
                                        <input type="password" name="password" class="form-control" required />
                                    </div>
                                    <!-- Confirm Password -->
                                    <div class="form-group">
                                        <label for="password2">Confirm Password</label>
                                        <input type="password" name="password2" class="form-control" required />
                                    </div>
                                    <!-- Role Selection -->
                                    <div class="form-group">
                                        <label for="role">Register As</label>
                                        <select name="role" class="form-control">
                                            <option value="Author" <%=role==='Author' ? 'selected' : '' %>>Author
                                            </option>
                                            <option value="Reviewer" <%=role==='Reviewer' ? 'selected' : '' %>>Reviewer
                                            </option>
                                            <option value="Admin" <%=role==='Admin' ? 'selected' : '' %>>Admin</option>
                                        </select>
                                    </div>
                                    <!-- Submit Button -->
                                    <button type="submit" class="btn btn-primary">Register</button>
                                </form>
                                <p class="mt-3">
                                    Already have an account? <a href="/auth/login">Login here</a>.
                                </p>
                            </div>

                            <%- include('partials/footer') %>