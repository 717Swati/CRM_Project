<!-- views/admin/editConference.ejs -->
<%- include('../partials/header') %>

    <div class="container mt-5">
        <h1>Edit Conference</h1>
        <form action="/admin/conferences/<%= conference._id %>" method="POST">
            <!-- Title -->
            <div class="form-group">
                <label for="title">Conference Title</label>
                <input type="text" name="title" class="form-control" value="<%= conference.title %>" required />
            </div>
            <!-- Description -->
            <div class="form-group">
                <label for="description">Description</label>
                <textarea name="description" class="form-control" rows="5"><%= conference.description %></textarea>
            </div>
            <!-- Submission Deadline -->
            <div class="form-group">
                <label for="submissionDeadline">Submission Deadline</label>
                <input type="date" name="submissionDeadline" class="form-control"
                    value="<%= conference.submissionDeadline.toISOString().split('T')[0] %>" required />
            </div>
            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary">Update Conference</button>
        </form>
    </div>

    <%- include('../partials/footer') %>